{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2015",
    "inlineSourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "plugins": [{ "name": "@glint/tsserver-plugin" }],
    // Avoid https://github.com/glimmerjs/glimmer-vm/issues/1116
    "skipLibCheck": true
  },
  "include": ["src", "tests"]
}
